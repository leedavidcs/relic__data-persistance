{
	"name": "mua_data-persistance",
	"version": "0.1.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"audit-ci": "audit-ci --moderate --report --package-manager npm",
		"format": "prettier ./**/*.{json,js,ts} -l",
		"format:fix": "npm run format -- --write",
		"lint": "tslint -p .",
		"start": "nodemon --watch './**/*' -e ts --exec 'ts-node --files .'",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:sonar": "ts-node scripts/generate-sonar && npm test -- --coverage --testResultsProcessor=jest-sonar-reporter"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/config": "0.0.34",
		"@types/graphql": "^14.2.0",
		"@types/jest": "^24.0.11",
		"@types/koa": "^2.0.48",
		"@types/koa-bodyparser": "^4.2.2",
		"@types/koa-logger": "^3.1.1",
		"@types/koa-router": "^7.0.40",
		"@types/lodash": "^4.14.123",
		"@types/mongoose": "^5.3.25",
		"apollo-server-koa": "^2.4.8",
		"config": "^3.1.0",
		"graphql": "^14.2.1",
		"http-status": "^1.3.2",
		"jest": "^24.7.1",
		"jest-sonar-reporter": "^2.0.0",
		"koa": "^2.7.0",
		"koa-bodyparser": "^4.2.1",
		"koa-logger": "^3.2.0",
		"koa-router": "^7.4.0",
		"lodash": "^4.17.11",
		"mockgoose": "^8.0.1",
		"mongoose": "^5.5.0",
		"nodemon": "^1.18.11",
		"ts-node": "^8.0.3",
		"typescript": "^3.4.3",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-typescript": "^7.3.3",
		"@types/fs-extra": "^5.0.5",
		"@types/nunjucks": "^3.1.1",
		"@types/read-pkg": "^4.0.0",
		"audit-ci": "^1.5.0",
		"babel-jest": "^24.7.1",
		"fs-extra": "^7.0.1",
		"nunjucks": "^3.2.0",
		"prettier": "^1.16.4",
		"read-pkg": "^5.0.0",
		"tslint": "^5.15.0",
		"tslint-config-prettier": "^1.18.0"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"coverageDirectory": "./coverage",
		"coverageReporters": [
			"cobertura",
			"json",
			"lcov",
			"text"
		],
		"coverageThreshold": {
			"global": {
				"lines": 80,
				"statements": 80
			}
		},
		"moduleFileExtensions": [
			"json",
			"js",
			"ts"
		],
		"testEnvironment": "node",
		"testMatch": [
			"<rootDir>/tests/**/*test.ts",
			"<rootDir>/tests/**/*test/index.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules"
		]
	},
	"jestSonar": {
		"reportPath": "test-reports",
		"reportFile": "sonar.xml",
		"indent": 4
	}
}
